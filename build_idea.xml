<?xml version="1.0" encoding="UTF-8"?>
<project name="mvc_eclipse_tomcat" default="all">
  
  
  <property file="build_idea.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.ear"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.swc"/>
    <include name="*.ane"/>
    <include name="*.egg"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.st"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.6" value="${jdk.home.1.6}/bin"/>
  <path id="jdk.classpath.1.6">
    <fileset dir="${jdk.home.1.6}">
      <include name="lib/deploy.jar"/>
      <include name="lib/dt.jar"/>
      <include name="lib/javaws.jar"/>
      <include name="lib/jce.jar"/>
      <include name="lib/jconsole.jar"/>
      <include name="lib/management-agent.jar"/>
      <include name="lib/plugin.jar"/>
      <include name="lib/sa-jdi.jar"/>
      <include name="../Classes/charsets.jar"/>
      <include name="../Classes/classes.jar"/>
      <include name="../Classes/jsse.jar"/>
      <include name="../Classes/ui.jar"/>
      <include name="lib/ext/apple_provider.jar"/>
      <include name="lib/ext/dnsns.jar"/>
      <include name="lib/ext/localedata.jar"/>
      <include name="lib/ext/sunjce_provider.jar"/>
      <include name="lib/ext/sunpkcs11.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.6}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.6}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.6"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.lib.classpath">
    <fileset dir="${basedir}/../../../playground/Tomcat_7.0/apache-tomcat-7.0.50/lib">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  <!-- Modules -->
  
  
  <!-- Module MVC_Eclipse_Tomcat -->
  
  <dirname property="module.mvc_eclipse_tomcat.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.mvc_eclipse_tomcat" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.mvc_eclipse_tomcat" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.mvc_eclipse_tomcat" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.mvc_eclipse_tomcat" value="${compiler.args}"/>
  
  <property name="mvc_eclipse_tomcat.output.dir" value="${module.mvc_eclipse_tomcat.basedir}/build/classes"/>
  <property name="mvc_eclipse_tomcat.testoutput.dir" value="${module.mvc_eclipse_tomcat.basedir}/build/classes"/>
  
  <path id="mvc_eclipse_tomcat.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="mvc_eclipse_tomcat.module.production.classpath">
    <path refid="${module.jdk.classpath.mvc_eclipse_tomcat}"/>
    <pathelement location="${basedir}/../../../Music/mockito-core-1.9.5.jar"/>
    <path refid="library.lib.classpath"/>
    <pathelement location="${basedir}/../../../Downloads/javax.servlet-3.0.0.v201112011016.jar"/>
  </path>
  
  <path id="mvc_eclipse_tomcat.runtime.production.module.classpath">
    <pathelement location="${mvc_eclipse_tomcat.output.dir}"/>
    <pathelement location="${basedir}/../../../Music/mockito-core-1.9.5.jar"/>
    <path refid="library.lib.classpath"/>
    <pathelement location="${basedir}/../../../Downloads/javax.servlet-3.0.0.v201112011016.jar"/>
  </path>
  
  <path id="mvc_eclipse_tomcat.module.classpath">
    <pathelement location="${mvc_eclipse_tomcat.output.dir}"/>
    <path refid="${module.jdk.classpath.mvc_eclipse_tomcat}"/>
    <pathelement location="${basedir}/../../../Music/mockito-core-1.9.5.jar"/>
    <path refid="library.lib.classpath"/>
    <pathelement location="${basedir}/../../../Downloads/javax.servlet-3.0.0.v201112011016.jar"/>
  </path>
  
  <path id="mvc_eclipse_tomcat.runtime.module.classpath">
    <pathelement location="${mvc_eclipse_tomcat.output.dir}"/>
    <pathelement location="${basedir}/../../../Music/mockito-core-1.9.5.jar"/>
    <path refid="library.lib.classpath"/>
    <pathelement location="${basedir}/../../../Downloads/javax.servlet-3.0.0.v201112011016.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.mvc_eclipse_tomcat">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.mvc_eclipse_tomcat">
    <patternset refid="excluded.from.module.mvc_eclipse_tomcat"/>
  </patternset>
  
  <path id="mvc_eclipse_tomcat.module.sourcepath">
    <dirset dir="${module.mvc_eclipse_tomcat.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.mvc_eclipse_tomcat" depends="compile.module.mvc_eclipse_tomcat.production,compile.module.mvc_eclipse_tomcat.tests" description="Compile module MVC_Eclipse_Tomcat"/>
  
  <target name="compile.module.mvc_eclipse_tomcat.production" description="Compile module MVC_Eclipse_Tomcat; production classes">
    <mkdir dir="${mvc_eclipse_tomcat.output.dir}"/>
    <javac destdir="${mvc_eclipse_tomcat.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.mvc_eclipse_tomcat}/javac">
      <compilerarg line="${compiler.args.mvc_eclipse_tomcat}"/>
      <bootclasspath refid="mvc_eclipse_tomcat.module.bootclasspath"/>
      <classpath refid="mvc_eclipse_tomcat.module.production.classpath"/>
      <src refid="mvc_eclipse_tomcat.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.mvc_eclipse_tomcat"/>
    </javac>
    
    <copy todir="${mvc_eclipse_tomcat.output.dir}">
      <fileset dir="${module.mvc_eclipse_tomcat.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.mvc_eclipse_tomcat.tests" depends="compile.module.mvc_eclipse_tomcat.production" description="compile module MVC_Eclipse_Tomcat; test classes" unless="skip.tests"/>
  
  <target name="clean.module.mvc_eclipse_tomcat" description="cleanup module">
    <delete dir="${mvc_eclipse_tomcat.output.dir}"/>
    <delete dir="${mvc_eclipse_tomcat.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.mvc_eclipse_tomcat" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.mvc_eclipse_tomcat" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>